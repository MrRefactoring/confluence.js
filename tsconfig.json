{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "~": ["src"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "rollup.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
